/* components/filterquery/index.wxss */
@import "../../weui.wxss";

.down_s {
  margin-left: 20rpx;
  width: 12rpx;
  height: 7rpx;
}

.search_bar button {
  font-size: 26rpx;
  margin-left: 20rpx;
  line-height: 28px;
  padding: 0 30rpx;
  white-space:nowrap;
  overflow: hidden;
  border: solid #dfdfdf 1px;
}
.search_bar button::after{
  border:none!important;
}
.search_bar .trangle {
  width: 14rpx;
  height: 10rpx;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.weui-search-bar__input {
  font-size: 30rpx;
  color: #333;
}
.weui-search-bar__label{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0px 10px;
}
.weui-cell {
  padding: 12px 15px 12px 35px;
}

.weui-search-bar__cancel-btn {
  font-size: 34rpx;
  color: #ac82ed;
}

.weui-search-bar {
  border-top: none;
  border-bottom: none;
  display: flex;
  align-items: center;
  /* padding: 0; */
  /* background-color: inherit; */
}

.btn1 {
  height: 30px;
  background: white;
  border: 1rpx solid #e6e6ea;
  font-size: 34rpx;
  box-sizing: border-box;
  border-radius: 5px;
  margin-left: 5rpx;
  white-space: nowrap;
  color: #333;
  overflow: hidden;
  line-height: 30px;
  width: 150rpx;
  text-align: center;
}

.weui-search-bar__text {
  margin-top: -8rpx;
}

.animation {
  background: rgba(0, 0, 0, 0.705);
  z-index: 999;
  float: left;
  right: -100vh;
  width: 100%;
  height: 100%;
  top: 0;
}

.animation-content {
  background: #f0f0f0;
  width: 80%;
  height: 100%;
  position: absolute;
  right: 0;
}

.autoHeight {
  font: 0px/0px sans-serif;
  clear: both;
  display: block;
  height: 0px;
}

.option {
  background: #fff;
  padding: 40rpx 18rpx;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.option_title {
  font-size: 30rpx;
  color: #333;
}

.option_param_op {
  border: 1px solid #d4d4d4;
  font-size: 22rpx;
  color: #999;
  padding: 15rpx 0;
  width: 240rpx;
  text-align: center;
  border-radius: 30rpx;
}

.option_param_op .mess {
  display: flex;
  justify-content: center;
  align-items: center;
}

.option_param_se {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.option_param_se input {
  width: 240rpx;
  float: left;
  border: 1px solid #e3e3e3;
  font-size: 25rpx;
  border-radius: 30rpx;
  padding-left: 10rpx;
  text-align: center;
}

.option_param_se text {
  float: left;
  margin: 0 10rpx 0 10rpx;
}

.option_param_dt {
  width: 100%;
  margin-top: 40rpx;
  display: inline-flex;
}

.option_param_dt .mess {
  flex: 1;
  width: 200rpx;
  text-align: center;
  border: 1px solid #e3e3e3;
  border-radius: 30rpx;
  font-size: 25rpx;
}

.option_param_dt .rili {
  margin-left: 10rpx;
  width: 47rpx;
  height: 49rpx;
}
.option_param_bt{
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.option_param_bt button{
  width: 170rpx;
  margin: 0;
  margin-bottom: 50rpx;
  font-size: 22rpx;
  line-height: 2.4;
  padding: 0;
  border-radius: 30rpx;
  background: #F6F6F6;
  overflow: visible;
}
.option_param_bt button.active{
  border-color: #fe8158;
  color: #fe8158;
  background: #fff;
}
.option_btn {
  bottom: 0;
  position: fixed;
  width: 80%;
}

.option_btn .cancel {
  width: 50%;
  float: left;
  border-radius: 0;
}

.option_btn .submit {
  width: 50%;
  float: left;
  border-radius: 0;
  background: #fe8158;
  color: #fff;
}

.weui-select_in-select-after {
  font-size: 34rpx !important;
  color: #333;
}

.weui-select_in-select-after {
  padding-left: 0;
}

.weui-select {
  position: relative;
  padding-left: 15px;
  padding-right: 30px;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
  border-right: 1rpx solid #d9d9d9;
}
.serchB{
  padding: 0;
  background: white;
}
.mess{
font-size:22rpx;
color:#999;
width:240rpx;
text-align:center;
}