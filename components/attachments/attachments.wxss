
.videoContainer {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
  top: 0px;
  left: 0px;
}

.videoContainer .close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: white;
  border: 1px solid #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 6rpx 12rpx;
}

.videoContainer video {
  margin-top: 20%;
  width: 100%;
}

.attachments {
  margin-top: 10rpx;
  padding: 0rpx;
}

.attachments .title {
  white-space: nowrap;
  color: #333;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}

.attachmentRow {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  box-sizing: border-box;
}

.attachments .addAttachment {
  width: 30%;
  height: 180rpx;
  border: 1px solid #e0e0e0;
  margin-right: 2%;
  text-align: center;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.attachments .addAttachment image {
  width: 30rpx;
  height: 40rpx;
}

.attachments .attachment {
  width: 30%;
  height: 180rpx;
  border: 1px solid #e0e0e0;
  display: inline-block;
  margin-right: 2%;
  margin-bottom: 20rpx;
  text-align: center;
  position: relative;
}

.attachments .attachment image {
  width: 100%;
  height: 180rpx;
}

.attachments .attachment .add {
  width: 40rpx;
  height: 40rpx;
}

.attachments .attachment .delete {
  width: 14px;
  height: 14px;
  position: absolute;
  top: -8px;
  right: -5px;
  background: white;
  border-radius: 100px;
  font-size: 6px;
  color: #999;
}
.attachments .attachment .video {
  width: 30rpx;
  height: 40rpx;
  position: absolute;
  left: 44%;
  top: 40%;
}

.attachments2{
  box-sizing: border-box;
  width: 100%;
}
.attachment2{
  width: 100%;
  position: relative;
}
.attachment2 image{
  width: 100%;
  height: 200rpx;
}
.attachment2:nth-child(n+2){
  margin-top: 20rpx;
}
.attachment2 .video{
  width: 30rpx;
  height: 40rpx;
  position: absolute;
  left: 48%;
  top: 45%;
}
