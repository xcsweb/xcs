.weui-cells_after-title{
  margin-top: 10px;
}
.weui-cell__hd .weui-label{
  font-size: 17px;
  color: #333;
}

.weui-cell__ft image{
  width: 25px;
  height: 25px;
  margin-top: 3px;
}
.cusTitle1{
  font-size: 17px;
  color: #000;
  padding-left: 15px;
}
.videoContainer{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
  top: 0px;
}
.videoContainer .close{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: white;
  border: 1px solid #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 6rpx 12rpx;
}
.videoContainer video{
  margin-top: 20%;
  width: 100%;
}
.attachments {
  background: white;
  padding: 15px;
  padding-top: 0px;
  border-bottom: 1px solid #e5e5e5;
}
.attachments .title {
  white-space: nowrap;
  color: #000;
  font-size: 17px;
}
.attachmentRow{
  display: flex;
  flex-wrap: wrap;
}

.attachments .addAttachment{
  width: 60px;
  height: 60px;
  border: 1px solid #E0E0E0;
  display: inline-block;
  margin-right: 15px;
  text-align: center;
  margin-top: 15px;
}
.attachments .addAttachment image{
  width: 14px;
  height: 20px;
  margin-top: 18px;
}

.attachments .attachment{
  width: 60px;
  height: 60px;
  border: 1px solid #E0E0E0;
  display: inline-block;
  margin-right: 15px;
  text-align: center;
  margin-top: 15px;
  position: relative;
}
.attachments .attachment image{
  width: 60px;
  height: 60px;
}
.attachments .attachment .add{
  width: 24px;
  height: 24px;
}
.attachments .attachment .delete{
  width: 14px;
  height: 14px;
  position: absolute;
  top: -8px;
  right: -5px;
  background: white;
  border-radius: 100px;
  font-size: 6px;
  color: #999;
}
