
.page__hd{
  position: fixed;
  width: 100%;
  z-index: 10;
}
.page__hd_{
  height: 110rpx;
}
.topBtnArea{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px 10px;
  padding-top: 15px;
  background: #F9F9F9;
  margin-top: -5px;
  height: 30px;
}
.topBtnArea button{
  color: #666;
  background: white;
}
.weui-search-bar{
  border-bottom: none;
}
/*tab*/
.cusTabs{
  display: flex;
  background: white;
  justify-content: space-around;
  align-items: center;
  padding:10rpx 0rpx;
}
.cusTabs .tab{
  text-align: center;
  font-size: 34rpx;
  padding: 0px 40px;
}
.cusTabs .indicator{
  width: 20px;
  height: 1px;
  background: #222;
  margin: 0 auto;
}
/*筛选*/
.filterArea{
  border-top: 1px solid #F1F1F1;
  color: #000000;
  font-size: 17px;
  white-space: nowrap;
  background: white;
  text-overflow: ellipsis;
  padding-bottom: 20px;
}
.filterArea .filterItems{
  display: flex;
  flex-wrap: wrap;
  text-align: center;
}
.filterArea  .filterItem{
  flex: 33%;
  padding: 8px 0px;
  max-width: 33.3%;
  color: #666;
  font-size: 34rpx;
}
.filterArea .filterBtns{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 20px;
}
.filterArea .filterBtns .weui-btn{
  font-size: 34rpx;
  color:#333;
}
.searchbar-result{
  color: #333;
  font-size: 34rpx;
}
.filterArea .filterBtns view{
  width: 40%;
}
.filterArea .filterItem{
  font-size: 34rpx;
  color: #666;
}
.filterArea .filterItem:nth-child(3n){
  border-bottom: 1px solid #F1F1F1;
}
.filterArea .filterItem:nth-child(3n-1){
  border-right: 1px solid #F1F1F1;
  border-bottom: 1px solid #F1F1F1;
}
.filterArea .filterItem:nth-child(3n-2){
  border-right: 1px solid #F1F1F1;
  border-bottom: 1px solid #F1F1F1;
}
/*列表*/
.list_item{
  display: flex;
  align-items: center;
  padding: 8px 0px;
  background: white;
  border-bottom: 1px solid #F1F1F1;
}
.list_item:first-child{
  margin-top: 20rpx;
}
.list_item .main{
  flex:70%;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 15px;
  color: #333333;
  font-size: 34rpx;
}
.list_item .main text{
  white-space: nowrap;
}
.list_item .main text:nth-child(n+2){
  color: #666;
}
.list_item .main>view{
  color: #666;
}
.list_item .status{
  flex:30%;
  text-align: center;
  font-size: 14px;
}
.list_item .status view{
  text-align: right;
  padding-right: 20px;
}
.list_item .status .new{
  color: #fe8158;
}
.list_item .status .readed{
  color: #999999;
}
.list_item .status .unconfirm{
  color: #66ccff;
}
