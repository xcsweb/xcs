.brife {
  margin-top: 10px;
  background: white;
  font-size: 17px;
  padding: 15px;
  line-height: 24px;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}

.brife .title {
  white-space: nowrap;
  color: #333;
  margin-bottom: 5px;
  font-size: 34rpx;
}

.brife .descs {
  white-space: nowrap;
  color: #666;
  font-size: 34rpx;
}

.content {
  margin-top: 10px;
  background: white;
  padding: 15px;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}

.content .title {
  white-space: nowrap;
  color: #333;
  font-size: 34rpx;
}

.content .descs {
  color: #666666;
  font-size: 15px;
  line-height: 20px;
}

.attachments {
  margin-top: 10px;
  background: white;
  padding: 15px;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}
.attachments .title {
  white-space: nowrap;
  color: #333;
  font-size: 34rpx;
}
.attachmentRow{
  display: flex;
  flex-wrap: wrap;
}
.attachments .attachment{
  width: 30%;
  height: 160rpx;
  border: 1px solid #E0E0E0;
  background: #f4f4f4;
  display: inline-block;
  margin-right: 15px;
  text-align: center;
  margin-top: 15px;
  position: relative;
}
.attachments .attachment .videoflag{
  width: 14px;
  height: 20px;
  top: 70rpx;
  position: absolute;
  left: 40%;
}
.attachments .attachment .prev{
  width: 100%;
  height: 160rpx;
  object-fit:  cover;
}

.btnWrapper{
  padding: 15px;
}