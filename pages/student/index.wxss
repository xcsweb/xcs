.body {
  height: 100%;
  background-repeat: no-repeat;
  background-size: cover;
}

page {
  height: 100%;
}

.student-title {
  margin: 23rpx auto;
  color: #fff;
}

.bgc {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  margin: 0 auto;
}

.photo_v {
  padding: 30rpx 0 10rpx 0;
  text-align: center;
}

.photo {
  width: 150rpx;
  height: 150rpx;
  /* border: 1px solid #fff; */
  border-radius: 50%;
}

.username {
  text-align: center;
  position: absolute;
  bottom: 6rpx;
  left: 0rpx;
  width: 100%;
}

.username text {
  border-radius: 105rpx;
  padding: 10rpx 30rpx;
  -webkit-border-stroke: 2rpx, rgba(255, 255, 255, 0.27);
  color: #333;
  font-size: 30rpx;
  text-align: center;
  box-sizing: border-box;
}

.erweima {
  width: 54rpx;
  height: 54rpx;
  bottom: -5rpx;
  background: #fff;
  display: inline-block;
  position: relative;
  margin-right: 30rpx;
}

.weui-grids {
  border: 1rpx solid;
  border-radius: 5px;
  border-color: #fff;
  background: #fff;
  overflow: hidden;
}

.weui-grid {
  position: relative;
  float: left;
  height: auto;
  padding: 28rpx 20rpx;
  width: 33.33333333%;
  box-sizing: border-box;
  background-color: #fff;
  border: none;
}

.weui-grid_active {
  background-color: #ececec;
}

.weui-grid__icon {
  display: block;
  width: 75rpx;
  height: 75rpx;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 30rpx;
  display: block;
  text-align: center;
  color: #333;
  font-size: 30rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.hid {
  display: none;
}

.showerweima {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 111;
  text-align: center;
  background: rgba(0, 0, 0, 0.7);
}

.showerweima canvas {
  display: inline-block;
  margin-top: 30%;
}

#main {
  position: relative;
  padding: 25rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.mainbg {
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
}

.page {
  background-color: #fff;
  box-shadow: 0px 0px 4px #ccc;
  border-radius: 22rpx;
}

.redDot {
  position: absolute;
  top: -8rpx;
  right: 22rpx;
  min-width: 30rpx;
  height: 30rpx;
  border-radius: 20rpx;
  background: red;
  color: white;
  font-size: 28rpx;
  padding: 2rpx;
  text-align: center;
  line-height: 30rpx;
}
