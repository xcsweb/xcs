<!--pages/student/my_profile/changepsd/changepsd.wxml-->
<view class='list'>
  <view class='li'>
    <text>手机号：<text style='color:#999'>{{oldPhone}}</text></text>
  </view>
  <view class='li'>
    <text>输入旧密码：</text>
    <input password='true' data-dataname='oldpsd' bindinput="bindKeyInput"></input>
  </view>
  <view class='li'>
    <text>请输入新密码：</text>
    <input password='true' data-dataname='newpsd' bindinput="bindKeyInput"></input>
  </view>
  <view class='li'>
    <text>请再次输入新密码：</text>
    <input password='true' data-dataname='againpsd' bindinput="bindKeyInput"></input>
  </view>
</view>

<button bindtap='savepsd' class='btn_down'>保存</button>