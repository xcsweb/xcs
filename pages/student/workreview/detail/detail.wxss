.body{
  padding-bottom:10px;
}
.vod_vfra{
  height: 356rpx;
  text-align: center;
}
.vod_vfra .vod{
  width: 100%;
  height: 356rpx;
  object-fit:cover;
}
.vod_vfra .vodflag {
  width:30px;
  height:40px;
  top:120rpx;
  position:absolute;
  left:45%;
}
.vod_vfra video{
  height: 356rpx;
}
.media{
  border-bottom:1px solid #D7D7D7;
}
.media .all{
  padding: 10px 10px 5px 10px;
  background-color: #fff;
  height:auto;
  text-align: center;
  overflow: hidden;
}
.avgwidth{
  width: 20%;
}
.vods{
  overflow: hidden;
}
.vods view{
  width: 58px;
  height:38px;
  margin-right: 7px;
  border-radius: 7rpx;
  border:2rpx solid #D7D7D7;
  text-align:center;
  float:left;
  line-height:38px;
  margin-bottom: 15rpx;
}
.vods view.selected{
  border-color: #02A7F0;
}
.imgs{
  height: 95px;
  margin-top: 10px;
  border-top: 2rpx solid #D7D7D7;
  padding-bottom: 10rpx;
}
.body .layout{
  padding: 20rpx 60rpx;
  border-top: 1px solid #D7D7D7;
  border-bottom: 1px solid #D7D7D7;
  background-color: #fff;
  margin-top: 10px;
}
.layout .tt{
  font-size:32rpx;
  margin:18rpx 0;
}
.layout .ctt{
  color:#c2c2c2;
  font-size:30rpx;
}
.ctdb{
  color:#c2c2c2;
  font-size:22rpx;
  height:60rpx;
}
.ctdb .ttl{
  float: left;
}
.ctdb .ttr{
  float: right;
}
.ctdc{
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items:center;
}
.ctdc .ttl{
  width: 22%;
  float: left;
  color:#000;
  font-size:30rpx;
}
.ctdc .progress{
  padding: 0 10px;
  width: 55%;
  float: left;
}
.ctdc .ttr{
  width: 23%;
  float: right;
  text-align: center;
  color:#c2c2c2;
  font-size:30rpx;
}
.ctdc .progress slider{
  margin: 0;
}
.ctdc .ttr{
  width: 15%;
  float: right;
  text-align: center;
}
.stt{
  color:#c2c2c2;
  font-size:30rpx;
  border-top: 1px solid #D7D7D7;
  margin-top: 5px;
}
.stta{
  margin: 5px 0;
}
.sttb{
  height:18px;
}
.sttb .ttl{
  float: left;
}
.sttb .ttr{
  float: right;
}
.totskb{
  margin:20rpx 0;
}
.totskc textarea{
  border:2rpx solid #D7D7D7;
  border-radius:10rpx;
  padding:10rpx;
  font-size:30rpx;
  width:auto;
}
.totskd{
  text-align: center;
  padding-top: 40rpx;
}
.totskd button{
  width:231rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10px;
  background: #02A7F0;
  color: #fff;
  font-size:24rpx;
}
.tkct{
  font-size:30rpx;
  color:#c2c2c2;
  height:20px;
  border-bottom:1px solid #c2c2c2;
  padding:10px 0;
}
.tkct .ltt{
  width:70%;
  float:left;
}
.tkct .rtt{
  width:30%;
  float:left;
  text-align:right;
}