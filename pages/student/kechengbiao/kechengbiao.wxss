
.topBtnArea{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px 10px;
  background: #fff;
  margin-bottom: 15rpx;
  height: 30px;
  padding-top: 5px;
}
.topBtnArea button{
  color: #666;
  background-color: white;
  padding-left: 10rpx;
  padding-right: 10rpx;
  display: flex;
  align-items: center;
}
.topBtnArea button image:first-child{
  margin-right: 10rpx;
}

.topBtnArea button image:last-child{
  margin-left: 10rpx;
}

.listItem{
  display: flex;
  padding: 20rpx;
  background: white;
  overflow: hidden;
  text-overflow: ellipsis;
  align-items: center;
  border-bottom: 1px solid #f1f1f1;
}
.listItem .img1{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  position: relative;
}
.listItem .img1 .status{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 28rpx;
  padding: 0rpx 8rpx;
}
.listItem .img1 image{
  width: 200rpx;
  height: 200rpx;
}
.listItem .item_end{
  width: 50px;
  font-size: 14px;
  color: #333;
  text-align: right;
  min-width: 50px;
  overflow: hidden;
}
.listItem .body{
  flex: 1;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  line-height: 34rpx;
  color: #333;
}
.listItem .body .title{
  font-size: 34rpx;
}
.listItem .body .value{
  color: #666;
}
.listItem .body .btn1{
  float: right;
  background: #FE9E9F;
  color: white;
  border-radius: 8rpx;
  padding: 6rpx;
  border: 1px solid #cecece;
}
.listItem .item_end image{
  width: 20px;
  height: 30px;
}
.classTypeIcon{
  width: 50rpx;
  height: 55rpx;
  float: right;
}
.listItem2{
  font-size: 34rpx;
  color: #333;
  border-bottom: 1rpx solid #f1f1f1;
}
.listItem2 button::after{
    border: none;
}
.listItem2 button{
  border: 1rpx solid #cecece;
  padding: 3rpx 10rpx;
  line-height: 40rpx;
  background-color: #FEA8A8;
  color: white;
}
.listItem2 .top{
  display: flex;
  background: white;
  padding: 20rpx;
  align-items: center;

}
.listItem2 .top .left{
  flex: 1;
}
.listItem2 .top .right{
  text-align: center;
  font-size: 30rpx;
}
.listItem2 .bottom{
  color: #666;
  display: flex;
  padding: 20rpx;
  background: #F9F9F9;
  font-size: 34rpx;
  border-top: 1rpx solid #f1f1f1;
}
.listItem2 .bottom view{
  flex: 1;
}