swiper {
  width: 100%;
  background: #ccc;
  position: relative;
  height: 400rpx;
}

swiper-item image {
  width: 100%;
  height: 400rpx;
}

swiper .swiperNum {
  position: absolute;
  z-index: 111;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 30rpx;
  color: white;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50rpx;
  width: 90rpx;
  text-align: center;
}

.brife{
  background: white;
  padding: 20rpx;
}
.brife .price{
  color: #ff8359;
  font-size: 42rpx;
}
.brife .title{
  color: #333;
  font-size: 34rpx;
}
.brife .info{
  color: #999;
  font-size: 30rpx;
}
.detail{
  background: white;
  padding: 20rpx;
  margin-top: 20rpx;
  color: #666;
  font-size: 34rpx;
}
.detail .title{
  color: #333;
  display: flex;
  align-items: center;
}
.detail .title .blk{
  width: 6rpx;
  height: 30rpx;
  background: #A274FE;
  margin-right: 20rpx;
}
.btn1{
  background-color: #FF8359;
  color: white;
}
.footer_{
  height: 120rpx;
}
.footer{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}
.footer button{
  border-radius: 0rpx;
}

.line2{
  padding: 20rpx;
  background: white;
  color: #333;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  border-top: 1rpx solid #f1f1f1;
  border-bottom: 1rpx solid #f1f1f1;
}
.line2 image{
  width: 40rpx;
  height: 40rpx;
}
.number{
  display: flex;
  align-items: center;
  border: 1px solid #f1f1f1;
  border-radius: 6rpx;
  width: 210rpx;
}
.number>view{
  flex: 1;
  text-align: center;
}
.number .reduce{
  border-right: 1px solid #f1f1f1;
}

.number .add{
  border-left: 1px solid #f1f1f1;
}
.hint{
  color: #999;
  background: white;
  font-size: 24rpx;
  text-align: right;
  padding-right: 24rpx;
}
