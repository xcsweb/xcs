.writeEvalArea {
  background: rgba(0, 0, 0, 0.3);
  z-index: 10;
  position: fixed;
  top: 0px;
  width: 100%;
  height: 100%; }

.writeEvalArea .writeEvalInner {
  position: absolute;
  bottom: 0px;
  width: 100%;
  background: white; }

.writeEvalArea .writeEvalInner .top {
