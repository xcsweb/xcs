.top {
  background: white;
  display: flex;
  justify-content: center;
  padding: 20rpx;
  margin-top: 20rpx; }

.postWrapper {
  padding: 20rpx;
  margin-top: 20rpx;
  background: white; }
  .postWrapper .userInfo {
    display: flex;
    align-items: center; }
    .postWrapper .userInfo .avatar {
      width: 90rpx;
      height: 90rpx;
      background: #ccc;
      border-radius: 100rpx;
      margin-right: 10rpx; }
    .postWrapper .userInfo .del {
      width: 42rpx;
      height: 49rpx;
      margin-left: 10rpx;}
    .postWrapper .userInfo .username {
      color: #333;
      font-size: 34rpx; }
    .postWrapper .userInfo .nameDate {
      flex: 1; }
    .postWrapper .userInfo .date {
      color: #999;
      font-size: 28rpx; }
    .postWrapper .userInfo .clsName {
      color: #333;
      font-size: 34rpx; }
  .postWrapper .content {
    color: #666;
    font-size: 34rpx; }
  .postWrapper .prises {
    display: flex;
    align-items: center;
    overflow: hidden; }
    .postWrapper .prises image {
      width: 40rpx;
      height: 40rpx;
      min-width: 40rpx; }
    .postWrapper .prises .fav {
      margin-right: 8rpx; }
    .postWrapper .prises .user {
      background: #ccc;
      margin-right: 8rpx; }
    .postWrapper .prises .more {
      color: #a375ff;
      font-size: 24rpx;
      width: 100rpx;
      min-width: 100rpx; }
  .postWrapper .operators {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-top: 10rpx;
    box-sizing: border-box; }
    .postWrapper .operators .button {
      flex: 1;
      margin: 0rpx 30rpx;
      white-space: nowrap;
      font-size: 34rpx;
      color: #333;
      border-radius: 10rpx;
      border: 1px solid #ddd;
      padding: 6rpx;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center; }
      .postWrapper .operators .button image {
        width: 35rpx;
        height: 35rpx;
        margin-right: 10rpx; }
    .postWrapper .operators .button:first-child {
      margin-left: 0rpx; }
    .postWrapper .operators .button:last-child {
      margin-right: 0rpx; }

