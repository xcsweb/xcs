  padding: 20rpx;
  font-size: 30rpx;
  align-items: center;
  justify-content: center;
  color: #000; }

.writeEvalArea .writeEvalInner .top picker {
  margin-left: 10rpx;
  border: 1px solid #f1f1f1;
  border-radius: 6rpx;
