/* pages/login/login.wxss */
.backIcon{
  text-align: center;
  width: 25px;
  height: 25px;
  margin-left: 15px;
  margin-top: 25px;
}
.formContainer{
  display: block;
  padding: 25px;
}
.formContainer .title{
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    color: #333;
    font-size: 34rpx;
}
.formContainer .title .titleIcon{
    width: 28px;
    height: 28px;
    margin-right: 10px;
}
.formContainer input{
  padding-top: 5px;
  border-bottom: 1px solid #ccc;
  margin-left: 8px;
  margin-bottom: 30px;
  font-size: 30rpx;
}
.formContainer .inputContainer{
  position: relative;
}
.inputContainer .vercodeBtn{
  position: absolute;
  top: 0px;
  color: #666666;
  right: 10px;
  font-size: 30rpx;
  border: 1px solid #ccc;
  text-align: center;
  border-radius: 100px;
  padding: 2px 4px;
  z-index: 11;
  line-height: 40rpx;
}
.buttonSubmit{
  background: #FF8359;
  text-align: center;
  color: white;
  width: 90%;
  margin: 0 auto;
  display: block;
  padding: 10px;
  border-radius: 5px;
  font-size: 34rpx;
}