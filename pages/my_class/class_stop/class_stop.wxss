.calendar_bar {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
  padding: 25rpx;
  background: #fff;
  font-size: 34rpx;
  color: #333;
}

.calendar_bar input {
  margin: 0 20rpx;
  width: 190rpx;
  color: #666;
  border-bottom: 1px solid #bdbdbd;
}

.calendar_bar image {
  width: 47rpx;
  height: 49rpx;
}

textarea {
  width: auto;
  padding: 25rpx;
  background: #fff;
  color: #333;
  font-size: 34rpx;
  margin-bottom: 72rpx;
}

.btn_bar {
  padding: 0 32rpx;
}

.btn_bar button {
  background: #ff7e4c;
  color: #fff;
}
