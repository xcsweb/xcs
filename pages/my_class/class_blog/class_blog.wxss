/* pages/my_class/class_blog/class_blog.wxss */
page,.content{
  height: 100%;
}
.mess {
  margin: 20rpx 0;
  padding: 15rpx 20rpx;
  background: #fff;
}
.emptyInner{
  text-align: center;
  padding-left: 30rpx;
}
.mess .title {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.mess .title image {
  width: 41rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.mess .body {
  font-size: 34rpx;
  color: #666;
}

.nav_attence {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 26rpx 86rpx;
  background: #fff;
  color: #a0a0a0;
  font-size: 30rpx;
}

.nav_attence .active {
  color: #333;
}

.nav_attence .active .hr {
  margin: 0 auto;
  padding-top: 10rpx;
  width: 45rpx;
  border-bottom: 1px solid #333;
}

.content {
  background: #fff;
  margin-bottom: 70rpx;
}

.content .photo_list {
  padding: 30rpx 10rpx 30rpx 30rpx;
}

.content .photo_list>image {
  width: 216rpx;
  height: 164rpx;
  margin-right: 20rpx;
  background: #f4f4f4;
}

.content .video_li {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #e2e2e2;
}

.content .video_li video {
  width: 216rpx;
  height: 164rpx;
}
.content .video_li .textli{
  text-align: center;
  flex: 1;
}
.content .video_li text {
  font-size: 34rpx;
  color: #333;
  display: block;
}

.active_list {
  padding: 30rpx 10rpx 30rpx 30rpx;
}

.active_list .top {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.active_list .top .li_mess {
  flex: 1;
}

.active_list .top text {
  font-size: 34rpx;
  display: block;
  color: #333;
}

.active_list .top .time {
  font-size: 28rpx;
  color: #999;
}

.content .active_list .top .avator {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  background: #8c8c8c;
  margin-right: 12rpx;
}

.active_list .body {
  font-size: 30rpx;
  color: #666;
}

.active_list .body image {
  width: 213rpx;
  height: 162rpx;
  background: #f4f4f4;
  border: 1px solid #e9e9e9;
  margin-right: 20rpx;
  margin-top: 30rpx;
}

.active_list .act_zan {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.active_list .act_zan .avator_act {
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background: #f4f4f4;
  border: 1px solid #e9e9e9;
  width: 40rpx;
  height: 40rpx;
}

.active_list .act_zan .heart {
  width: 36rpx;
  height: 33rpx;
  margin-right: 14rpx;
  margin-bottom: 17rpx;
}

.active_list .act_zan .more {
  width: 5em;
  font-size: 24rpx;
  color: #a375ff;
}

.down_bar {
  z-index: 999;
  text-align: center;
  position: fixed;
  bottom: 0;
  padding: 27rpx 0;
  width: 100%;
  background: #ff7547;
  font-size: 34rpx;
  color: #fff;
  line-height: 1.2;
}

.empty {
  padding: 160rpx 0;
}

.empty image {
  display: block;
  margin: 0 auto;
  width: 275rpx;
  height: 211rpx;
}

.empty text {
  display: block;
  font-size: 30rpx;
  color: #999;
  text-align: center;
}

.empty .add {
  display: inline;
  font-size: 34rpx;
  color: #a375ff;
  text-decoration: underline;
  padding: 0.25rem;
}
