/* pages/jiaowu/attend/attend.wxss */
.search_bar {
  padding: 16rpx 20rpx;
  background: #efeff4;
  display: flex;
}

.search_bar input {
  flex: 1;
  background: #fff;
  border: 1px solid #ededf1;
  font-size: 26rpx;
  height: 40rpx;
  padding: 0 26rpx;
  text-align: center;
}

.search_bar  button {
  font-size: 26rpx;
  margin-left: 20rpx;
  line-height: 2;
  padding: 0 30rpx;
}

.attence_list .attence_li {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 46rpx;
  background: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.attence_list .attence_li .mess {
  flex: 1;
  font-size: 26rpx;
}

.attence_list .attence_li .mess text {
  display: block;
  color: #666;
  font-size: 30rpx;
  line-height: 56rpx;
}
.attence_list .attence_li .iconfont{
  font-size: 25rpx;
  color: #999;
}
.attence_list .attence_li .mess .name {
  font-size: 34rpx;
  color: #333;
}

.page__hd {
  position:fixed;
  width:100%;
  z-index:10;
}
.page__bd{
  padding-top: 47px;
}