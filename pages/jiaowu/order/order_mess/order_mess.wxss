/* pages/jiaowu/order/order_mess/order_mess.wxss */

.mess_top {
  padding: 24rpx;
  background: #fff;
}

.mess_top .avator {
  display: block;
  margin: 0 auto;
  width: 140rpx;
  height: 140rpx;
  background: #d9d9d9;
  border-radius: 50%;
}
.btn_list .btn {
  height: 65rpx;
  display: flex;
  font-size: 30rpx;
  align-items: center;
  border: 1px solid #eee;
  padding: 0rpx 10rpx;
  border-radius: 6rpx;
}

.btn_list .btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
}
.mess_top .sex_ico {
  position: absolute;
  top: 140rpx;
  right: 315rpx;
  width: 30rpx;
  height: 30rpx;
}

.mess_top .btn_list {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
}

.mess_top .btn_list button {
  min-width: 200rpx;
  background-repeat: no-repeat;
  background-size: 45rpx 45rpx;
  padding-left: 60rpx;
  background-position: 10rpx 50%;
  font-size: 30rpx;
  color: #333;
}

.mess_top .btn_list text {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  color: #333;
  line-height: 76rpx;
}

.order_list {
  margin-top: 20rpx;
}

.order_list .order_li {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 22rpx;
  background: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.order_list .order_li .avatar {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  background: #d9d9d9;
  margin-right: 15rpx;
}

.order_list .order_li .mess {
  flex: 1;
  font-size: 34rpx;
  line-height: 1.3;
}

.order_list .order_li .mess text {
  display: block;
  margin-bottom: 5rpx;
  color: #666;
}

.order_list .order_li .mess .name {
  color: #333;
  font-size: 34rpx;
}

.order_list .order_li .oper {
  text-align: center;
}

.order_list .order_li .oper .new {
  display: block;
  color: #fe8158;
  font-size: 30rpx;
}

.order_list .order_li button {
  padding: 0 10rpx;
  font-size: 26rpx;
}

.order_list .order_li button image {
  width: 14rpx;
  height: 10rpx;
}

.order_list .order_li .cancel {
  display: block;
  color: #666;
  font-size: 30rpx;
}
