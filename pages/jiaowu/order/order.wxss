/* pages/jiaowu/order/order.wxss */

.nav_order {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 15rpx 42rpx;
  background: #fff;
  color: #a0a0a0;
  font-size: 30rpx;
}

.nav_order .active {
  color: #333;
}

.nav_order .active .hr {
  margin: 0 auto;
  padding-top: 10rpx;
  width: 45rpx;
  border-bottom: 1px solid #333;
}

.order_list .order_li {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 20rpx;
  background: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.order_list .order_li .avatar {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  background: #d9d9d9;
  margin-right: 15rpx;
}

.order_list .order_li .mess {
  flex: 1;
  font-size: 34rpx;
  line-height: 1.3;
}

.order_list .order_li .mess text {
  display: block;
  margin-bottom: 5rpx;
  color: #666;
}

.order_list .order_li .mess .name {
  color: #000;
}

.order_list .order_li .oper {
  text-align: center;
}

.order_list .order_li .oper .new {
  display: block;
  color: #fe8158;
  font-size: 30rpx;
}

.order_list .order_li button {
  padding: 0 10rpx;
  font-size: 26rpx;
}
.order_list .order_li button image{
  width: 14rpx;
  height: 10rpx;
}

.order_list .order_li .cancel{
  display: block;
  color: #666;
  font-size: 30rpx;
}

