/* pages/jiaowu/studentrial/studentrial.wxss */

.btn_bar {
  display: flex;
  padding: 15rpx 45rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.btn_bar button {
  margin-right: 0;
  font-size: 26rpx;
  line-height: 2;
}

.btn_bar .trangle {
  width: 14rpx;
  height: 10rpx;
}

.list {
  display: flex;
  position: relative;
  align-items: center;
  padding: 35rpx 20rpx;
  background: #fff;
  border-bottom: 1px solid #F1F1F1;
}

.list .avatar {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  background: #e7d6ba;
  margin-right: 10rpx;
}

.list .mess text {
  line-height: 1;
  margin-bottom: 15rpx;
  display: block;
  font-size: 34rpx;
}

.list .mess .name {
  font-weight: 600;
}

.list .type {
  position: absolute;
  top: 35rpx;
  right: 20rpx;
  font-size: 30rpx;
  color: #ccc;
}

.list .type.on {
  color: #a375ff;
}

.list .btn {
  position: absolute;
  bottom: 35rpx;
  right: 20rpx;
  padding: 10rpx;
  font-size: 30rpx;
  line-height: 1;
}

.list .btn.change {
  right: 115rpx;
  background: #ff733e;
  color: #fff;
}
